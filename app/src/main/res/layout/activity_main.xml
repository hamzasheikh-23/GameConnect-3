<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:background="@drawable/board"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageRed1"
            android:tag="1"
            android:onClick="dropIn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="14dp"
            app:layout_column="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageRed2"
            android:tag="2"
            android:onClick="dropIn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="18dp"
            app:layout_column="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageRed3"
            android:onClick="dropIn"
            android:tag="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="152dp"
            android:layout_marginLeft="14dp"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageRed4"
            android:onClick="dropIn"
            android:tag="4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="17dp"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageRed5"
            android:onClick="dropIn"
            android:tag="5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="17dp"
            app:layout_column="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageRed6"
            android:onClick="dropIn"
            android:tag="6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="17dp"
            app:layout_column="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageRed7"
            android:onClick="dropIn"
            android:tag="7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            app:layout_column="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageRed8"
            android:tag="8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:onClick="dropIn"
            app:layout_column="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageRed9"
            android:onClick="dropIn"
            android:tag="9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            app:layout_column="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>